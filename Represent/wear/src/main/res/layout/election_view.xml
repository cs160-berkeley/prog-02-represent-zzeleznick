<?xml version="1.0" encoding="utf-8"?>

<android.support.wearable.view.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/watch_bkg"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <android.support.wearable.view.CardScrollView
        android:id="@+id/card_scroll_view"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:layout_box="bottom">

        <android.support.wearable.view.CardFrame
            android:id="@+id/myCard"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_gravity="bottom">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="24"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:fontFamily="sans-serif-light"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:text="2012 Results"
                        android:layout_weight="20"
                        android:textColor="@color/black"
                        android:textSize="18sp"/>

                    <TextView
                        android:fontFamily="sans-serif-light"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:id="@+id/district"
                        android:text="D 42"
                        android:textColor="@color/black"
                        android:textSize="10sp"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:fontFamily="sans-serif-light"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/firstCandidate"
                        android:text="Candidate 1"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:paddingTop="5dp" />
                    <TextView
                        android:fontFamily="sans-serif-light"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@id/firstCandidate"
                        android:id="@+id/firstCandidateValue"
                        android:text="Value 1"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:paddingTop="5dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        />
                 </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:fontFamily="sans-serif-light"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/secondCandidate"
                        android:text="Candidate 2"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:paddingTop="5dp" />
                    <TextView
                        android:fontFamily="sans-serif-light"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Value 2"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@id/secondCandidate"
                        android:id="@+id/secondCandidateValue"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:paddingTop="5dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"/>

                </RelativeLayout>

            </LinearLayout>
        </android.support.wearable.view.CardFrame>
    </android.support.wearable.view.CardScrollView>
</android.support.wearable.view.BoxInsetLayout>